<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>

    <!--自定义MLImageView的属性-->
    <declare-styleable name="CBImageView">
        <attr name="press_alpha" format="integer" />
        <attr name="press_color" format="color" />
        <attr name="radius" format="dimension" />
        <attr name="border_width_cbi" format="dimension" />
        <attr name="border_color_cbi" format="color" />
        <attr name="shape_type" format="enum">
            <enum name="round" value="0" />
            <enum name="rectangle" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="RefreshLayout">
        <attr name="wave_height" format="dimension" />
        <attr name="head_height" format="dimension" />
        <attr name="bottom_height" format="dimension" />
        <attr name="overscroll_height" format="dimension" />
        <attr name="enable_loadmore" format="boolean" />
        <attr name="pureScrollMode_on" format="boolean" />
        <attr name="overscroll_top_show" format="boolean" />
        <attr name="overscroll_bottom_show" format="boolean" />
        <attr name="enable_overscroll" format="boolean" />
        <attr name="headerView" format="dimension" />
        <attr name="bottomView" format="dimension" />
    </declare-styleable>
</resources>